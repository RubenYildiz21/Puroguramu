@page
@model Puroguramu.App.Pages.Account.ChangePasswordModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Changer le Mot de Passe</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-900 text-gray-200 flex flex-col justify-between min-h-screen">


    <!-- Main Content Area (Form Section) -->
    <div class="flex-grow flex items-center justify-center p-6 mt-20">
        <div class="w-full max-w-lg p-6 bg-gray-800 rounded-xl shadow-xl">
            <form method="POST">
                @Html.AntiForgeryToken()
                <h2 class="text-3xl font-semibold text-center mb-6">Changer le Mot de Passe</h2>

                @if (!string.IsNullOrEmpty(Model.StatusMessage))
                {
                    <div class="bg-green-500 text-white p-4 rounded-lg mb-4">
                        @Model.StatusMessage
                    </div>
                }

                <div class="mb-6">
                    <label asp-for="Input.CurrentPassword" class="block text-lg font-medium text-gray-300 mb-2">Mot de passe actuel</label>
                    <input asp-for="Input.CurrentPassword" class="mt-1 block w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition duration-300 ease-in-out" placeholder="Entrez votre mot de passe actuel">
                    <span asp-validation-for="Input.CurrentPassword" class="text-red-500 mt-2 block"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="Input.NewPassword" class="block text-lg font-medium text-gray-300 mb-2">Nouveau mot de passe</label>
                    <input asp-for="Input.NewPassword" class="mt-1 block w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition duration-300 ease-in-out" placeholder="Entrez le nouveau mot de passe">
                    <span asp-validation-for="Input.NewPassword" class="text-red-500 mt-2 block"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="Input.ConfirmPassword" class="block text-lg font-medium text-gray-300 mb-2">Confirmez le mot de passe</label>
                    <input asp-for="Input.ConfirmPassword" class="mt-1 block w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 transition duration-300 ease-in-out" placeholder="Confirmez le nouveau mot de passe">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 mt-2 block"></span>
                </div>

                <!-- Submit Button -->
                <div class="flex items-center justify-center">
                    <button type="submit" class="px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg shadow-lg font-medium text-white transition-transform transform hover:scale-105">
                        Changer le mot de passe
                    </button>
                </div>
            </form>
        </div>
    </div>



</body>
</html>
