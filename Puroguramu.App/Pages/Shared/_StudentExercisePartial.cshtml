@model IEnumerable<Puroguramu.Domains.modelsDomains.StudentExerciseDto>

<div class="space-y-4">
    @foreach (var exercise in Model)
    {
    <div
        class="bg-gray-800 rounded-2xl p-8 shadow-xl transform hover:-translate-y-1 transition duration-300 ease-in-out">
        <h2 class="text-2xl font-bold text-gray-100 mb-2">@exercise.Title</h2>
        <p class="text-gray-400 text-sm">Difficulté : @exercise.DifficultyExo</p>
        <p class="text-gray-400 text-sm">État : @exercise.Statuts</p>
        <a href="~/Exercices/Exercice/@exercise.ExerciseId"
           class="inline-block mt-4 px-5 py-3 bg-gradient-to-r from-blue-500 to-indigo-500 text-white font-semibold text-sm rounded-lg shadow-md transform hover:scale-105 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50 transition duration-200 ease-in-out">
            Commencer cet exercice
        </a>
    </div>
    }
</div>