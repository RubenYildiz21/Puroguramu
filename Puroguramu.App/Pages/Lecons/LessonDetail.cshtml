@page
@model Puroguramu.App.Pages.Lecons.LessonDetail

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Détail de la Leçon</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="~/js/dropdown.js"></script>
</head>
<body class="bg-gray-900 text-gray-200 flex flex-col min-h-screen">

<div class="flex-grow container mx-auto p-10">
    <h1 class="text-3xl font-bold text-gray-100 mb-6">@Model.Lesson.Title</h1>
    <h2 class="text-xl text-gray-400 mb-4">@Model.Lesson.Description</h2>

    <!-- Inclusion de la vue partielle pour les exercices -->
    <partial name="Shared/_StudentExercisePartial" model="Model.Exercises"/>
</div>

</body>
</html>