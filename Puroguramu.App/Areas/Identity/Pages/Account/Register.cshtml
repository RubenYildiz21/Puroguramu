@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Inscription Étudiant</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-gray-900 to-gray-800 min-h-screen flex flex-col justify-center">

    <div class="min-h-screen flex flex-col justify-center py-12 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-gray-800 px-8 py-10 rounded-xl shadow-lg"> <!-- Arrière-plan plus foncé, coins plus arrondis -->
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                     @Html.AntiForgeryToken()
                    <h2 class="text-xl font-semibold mb-4 text-white">Inscrivez-vous :3</h2> <!-- Increased margin and weight -->

                    <hr class="mb-6 border-gray-700"/> <!-- Marge plus grande sous la ligne de séparation -->
                    <div class="mb-6">
                        <label asp-for="Input.ProfilePicture" class="block mb-2 text-sm font-medium text-gray-300">Photo de Profil</label> <!-- Ajout d'un label explicite -->
                        <input asp-for="Input.ProfilePicture" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 cursor-pointer" type="file"/>
                        <span asp-validation-for="Input.ProfilePicture" class="text-red-500 mt-2 block"></span> <!-- Message d'erreur mieux espacé -->
                    </div>
                    <div class="mb-6">
                        <label asp-for="Input.Matricule" class="block mb-2 text-sm font-medium text-gray-300">Matricule</label>
                        <input asp-for="Input.Matricule" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3" placeholder="A123456" pattern="[A-Za-z]{1}[0-9]{6}" required/>
                        <span asp-validation-for="Input.Matricule" class="text-red-500 mt-2 block"></span>
                    </div>
                    <div class="mb-6">
                        <label asp-for="Input.FirstName" class="block mb-2 text-sm font-medium text-gray-300">Prénom</label>
                        <input asp-for="Input.FirstName" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3" placeholder="Votre prénom" required/>
                        <span asp-validation-for="Input.FirstName" class="text-red-500 mt-2 block"></span>
                    </div>
                    <div class="mb-6">
                        <label asp-for="Input.LastName" class="block mb-2 text-sm font-medium text-gray-300">Nom</label>
                        <input asp-for="Input.LastName" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3" placeholder="Votre nom" required/>
                        <span asp-validation-for="Input.LastName" class="text-red-500 mt-2 block"></span>
                    </div>
                    <div class="mb-6">
                        <label asp-for="Input.Email" class="block mb-2 text-sm font-medium text-gray-300">Adresse Email</label>
                        <input asp-for="Input.Email" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3" placeholder="exemple@domaine.com" required/>
                        <span asp-validation-for="Input.Email" class="text-red-500 mt-2 block"></span>
                    </div>
                    <div class="mb-6">
                        <label asp-for="Input.Password" class="block mb-2 text-sm font-medium text-gray-300">Mot de passe</label>
                        <input asp-for="Input.Password" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3" placeholder="********" required/>
                        <span asp-validation-for="Input.Password" class="text-red-500 mt-2 block"></span>
                    </div>
                    <div class="mb-6">
                        <label asp-for="Input.ConfirmPassword" class="block mb-2 text-sm font-medium text-gray-300">Confirmez le mot de passe</label>
                        <input asp-for="Input.ConfirmPassword" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3" placeholder="********" required/>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 mt-2 block"></span>
                    </div>
                    <div class="mb-6">
                        <label asp-for="Input.LabGroup" class="block mb-2 text-sm font-medium text-gray-300">Groupe de laboratoire</label>
                        <select asp-for="Input.LabGroup" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3" required>
                            <option value="2i1">2i1</option>
                            <option value="2i2">2i2</option>
                            <option value="2i3">2i3</option>
                            <option value="2i4">2i4</option>
                        </select>
                        <span asp-validation-for="Input.LabGroup" class="text-red-500 mt-2 block"></span>
                    </div>
                    <div>
                        <button id="register-submit" type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-lg text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-transform transform hover:scale-105">S'inscrire</button> <!-- Effet de transformation et mise à jour des couleurs -->
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
